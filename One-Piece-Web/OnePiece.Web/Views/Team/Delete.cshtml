@using OnePiece.Web.ViewModels.Team
@model TeamPreDeleteDetailsViewModel
@{
    ViewBag.Title = "Delete Team";
}
<h2 class="text-center">@ViewBag.Title</h2>
<hr />
<form asp-action="Delete">
    <div class="row">
        <div class="col-md-8">
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" disabled="disabled" />
            </div>
            <div class="form-group">
                <label asp-for="TeamType" class="control-label"></label>
                <input asp-for="TeamType" class="form-control" disabled="disabled" />
            </div>
            <div class="form-group">
                <label asp-for="MissionName" class="control-label"></label>
                <input asp-for="MissionName" class="form-control" disabled="disabled" />
            </div>

            <div class="form-group">
                <input type="submit" value="Delete" class="btn btn-danger mt-2" />
            </div>
        </div>
    </div>
</form>